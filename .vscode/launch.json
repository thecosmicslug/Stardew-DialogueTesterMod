{
    "version": "0.2.0",
    "configurations": [
      {
        "name": ".NET Core Launch",
        "type": "coreclr",
        "request": "launch",
        "preLaunchTask": "build",
        "program": "${env:HOME}/.steam/steam/steamapps/common/Stardew Valley/StardewModdingAPI",
        "args": [],
        "cwd": "${workspaceFolder}",
        "console": "internalConsole",
        "stopAtEntry": false,
        "logging": {
          "moduleLoad": false,
          "threadExit": false,
          "processExit": false
      }
      },
      {
        "name": ".NET Core Attach",
        "type": "coreclr",
        "request": "attach"
      }
    ]
  }